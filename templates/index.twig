<!doctype html>
<html>
<head>
    <meta charset="UTF-8">
    <title>GOODS</title>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"
            integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
</head>
<body>
<div id="content"></div>
<button id="more">Показать еще</button>

<script>
    let from = 0;

    function load() {
        $.ajax({
            url: '?from=0' + from,
            dataType: 'html',
            success: function (data) {
                $('#content').append(data);
                from += {{ limit }};
            }
        });
    }

    load();
    $('#more').click(function () {
        load();
    })
</script>
</body>
</html>